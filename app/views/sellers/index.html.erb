<h1><%= current_user.first_name %> &nbsp; <%= current_user.last_name %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Book name</th>
      <th>Price</th>
      <th>Author</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.book_name %></td>
        <td><%= book.price %></td>
        <td><%= book.author_name %></td>
        <td><%= book.description %></td>
        <td><%= link_to 'Show', book_path(book) %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path(current_user) %>